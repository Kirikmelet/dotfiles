browser "w3m %u"





# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

bind-key ^O redraw
bind-key S save-all
bind-key ^M mark-all-above-as-read
bind-key ^L next-feed
bind-key ^H prev-feed
bind-key L next
bind-key H prev


macro y set browser "mpv %u" ; open-in-browser ; set browser "w3m %u"
macro r set browser "tuir %u" ; open-in-browser ; set browser "w3m %u"
macro m set browser "palemoon %u" ; open-in-browser ; set browser "w3m %u"
